generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profiles {
  id Int @id @default(autoincrement())
  telegram_id BigInt? @unique
  created_at DateTime
  phone_number String? @unique
}

model Photos {
  id Int @id @default(autoincrement())
  created_at DateTime
  size Int
  height Int
  type String
  name String
}

model Products {
  id Int @id @default(autoincrement())
  created_at DateTime
  product_status_id Int
  brand_id Int
  type_id Int
  title String
}

model Product_statuses {
  id Int @id @default(autoincrement())
  title String @unique
}

model Types {
  id Int @id @default(autoincrement())
  title String @unique
}

model Brands {
  id Int @id @default(autoincrement())
  title String @unique
}

model Product_photos {
  id Int @id @default(autoincrement())
  product_id Int
  photo_id Int
}

model Similar_products {
  id Int @id @default(autoincrement())
  product_id Int
  similar_product_id Int
}

model Product_sizes {
  id Int @id @default(autoincrement())
  product_id Int
  tag String
  value String
  length Int
  width Int
  height Int
  weight Int
  count Int
  current_price Float
  old_price Float
  in_stock Boolean
}

model Orders {
  id Int @id @default(autoincrement())
  created_at DateTime
  profile_id Int
  order_status_id Int
  first_name String
  last_name String
  patronymic String
  address String
  delivery_method_id Int
  payment_method_id Int
  promo_code String
}

model Order_items {
  id Int @id @default(autoincrement())
  order_id Int
  product_id Int
  product_size_id Int
}

model Order_statuses {
  id Int @id @default(autoincrement())
  title String
}

model delivery_methods {
  id Int @id @default(autoincrement())
  title String
}

model payment_methods {
  id Int @id @default(autoincrement())
  title String
}

model promo_codes {
  id Int @id @default(autoincrement())
  created_at DateTime
  title String
  count Int
  discount_percentage Int
}

model Chats {
  id Int @id @default(autoincrement())
  created_at DateTime
  order_id Int
}

model Messages {
  id Int @id @default(autoincrement())
  created_at DateTime
  chat_id Int
  profile_id Int
  message String
}

model Posts {
  id Int @id @default(autoincrement())
  creator_id Int
  created_at DateTime
  preview_id Int
  link_name String
  title String
  text String
}
